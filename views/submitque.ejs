<div class="row">
  <h1>目前共<%= data.length %>題</h1>
  <div class="col align-self-start">
    <form action="/sendque" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="num" class="form-label">題號：</label>
          <input type="text" name="num" class="form-control" />
        </div>
        <div class="col-12">
          <label for="que" class="form-label">題目：</label>
          <input type="text" name="que" class="form-control" />
        </div>
        <div class="col-12">
          <label for="opa" class="form-label">選項A：</label>
          <input type="text" name="opa" class="form-control" />
        </div>
        <div class="col-12">
          <label for="opb" class="form-label">選項B：</label>
          <input type="text" name="opb" class="form-control" />
        </div>
        <div class="col-12">
          <label for="opc" class="form-label">選項C：</label>
          <input type="text" name="opc" class="form-control" />
        </div>
        <div class="col-12">
          <label for="opd" class="form-label">選項D：</label>
          <input type="text" name="opd" class="form-control" />
        </div>
        <div class="col-12">
          <label for="ans" class="form-label">答案：</label>
          <input type="text" name="ans" class="form-control" />
        </div>
        <div class="col-12">
          <label for="trans" class="form-label">翻譯：</label>
          <input type="text" name="trans" class="form-control" />
        </div>
        <div class="col-12">
          <button class="btn btn-primary" type="submit">送出</button>
        </div>
      </div>
    </form>
  </div>
  <div class="col align-self-center">
    <% if(data.length >0) { %> <% for(var i=0;i< data.length;i++) {%>
    <h5 class="dataLen"><%=data[i].id%>: <%=data[i].que%></h5>
    <div class="container mb-3">
      <div class="row">
        <div class="col align-self-start">
          <p name="radio<%= i %>">選項A: <%=data[i].option.A%></p>
          <p name="radio<%= i %>">選項B: <%=data[i].option.B%></p>
          <p name="radio<%= i %>">選項C: <%=data[i].option.C%></p>
          <p name="radio<%= i %>">選項D: <%=data[i].option.D%></p>
        </div>
        <div class="col align-self-center"></div>
        <div class="col align-self-end">
          <div id="showDiv<%= i %>" class="col align-self-end">
            <p style="display: inline">答案:</p>
            <p id="ans<%= i%>" style="display: inline" class="fs-2">
              <%=data[i].answer%>
            </p>
            <p>翻譯: <%=data[i].translate%></p>
          </div>
        </div>
        <hr size="8px" width="100%" />
      </div>
    </div>

    <% } %> <% } %>
  </div>
</div>
